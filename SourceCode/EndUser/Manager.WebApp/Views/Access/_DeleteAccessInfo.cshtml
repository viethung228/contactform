@model Manager.WebApp.Models.AccessViewModel
@using Manager.WebApp.Resources

<div class="modal-header">
    <h5 class="modal-title" id="">
        @ManagerResource.CONFIRM_DELETE
    </h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">
            &times;
        </span>
    </button>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.AccessId)

    <div class="modal-footer">
        <input class="btn btn-danger btn-sm" type="submit" value="Yes" />
        <button type="button" class="btn btn-info btn-sm" data-dismiss="modal">No</button>        
    </div>
}
