@using Manager.WebApp.Resources
@model Manager.WebApp.Models.EmailServerUpdateModel

@{
    var title = ManagerResource.LB_UPDATE_EMAIL_SERVER;
    ViewBag.Title = title;
}

@await Html.PartialAsync("_Notifications")

@await Html.PartialAsync("../Widgets/Modals/_LargeModal")

<div class="m-portlet">
    <div class="m-portlet__head">
        <div class="m-portlet__head-caption pl10">
            <div class="m-portlet__head-title">
                <h3 class="m-portlet__head-text">
                    <i class="fa fa-cogs fz-20"></i> @ManagerResource.LB_UPDATE_EMAIL_SERVER
                </h3>
            </div>
        </div>
    </div>

    <div class="m-portlet__body">
        @using (Html.BeginForm("Edit", "EmailServer", FormMethod.Post, new { role = "form", @class = "m-form m-form--fit", id = "frmEdit", encType = "multipart/form-data" }))
        {
            @Html.HiddenFor(m => m.Id)

            @await Html.PartialAsync("_UpdateForm")
        }
    </div>
</div>
<!--end::Portlet-->

