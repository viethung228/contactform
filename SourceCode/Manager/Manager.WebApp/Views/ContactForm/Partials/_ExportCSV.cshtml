                <td>@record.ContactForm.DateOfBirth.ToShortDateString()</td>
                <td></td>
                <td></td>
                <td>@(getAddress.Length >= 2 ? getAddress[1] : "")</td>
                <td>@(getAddress.Length >= 3 ? getAddress[2] : "")</td>
                <td>@(getAddress.Length >= 1 ? getAddress[0] : "")</td>
                <td>@record.ContactForm.PhoneNumber</td>
                <td></td>
                <td></td>
