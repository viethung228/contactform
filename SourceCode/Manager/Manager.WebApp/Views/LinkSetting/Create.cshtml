@using Manager.WebApp.Resources
@using Manager.WebApp.Models
@model Manager.WebApp.Models.LinkSettingUpdateModel

@{
    ViewBag.Title = ManagerResource.LB_ADD_NEW;
    ViewBag.ParentController = "LinkSetting";
    ViewBag.ParentAction = "Index";
}

@await Html.PartialAsync("_Notifications")

<div class="modal-header">
    <h5 class="modal-title" id="">
        @ManagerResource.LB_ADD_NEW
    </h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">
            &times;
        </span>
    </button>
</div>
<div class="modal-body" data-size="full">
    <div class="m-portlet__body">
        @using (Html.BeginForm("Create", "LinkSetting", FormMethod.Post, new { @class = "m-form m-form--fit", role = "form", id = "frmLinkSetting", EncType = "multipart/form-data" }))
        {
            @await Html.PartialAsync("Partials/_InsertForm", Model)
        }
    </div>
</div>

<style>
    .resizable {
        resize: vertical !important;
    }
</style>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/ImageModal/preview.js"></script>