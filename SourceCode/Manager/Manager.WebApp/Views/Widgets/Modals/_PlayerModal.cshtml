@using Manager.WebApp.Resources

<div class="modal fade" role="dialog" aria-labelledby="" data-backdrop="static" aria-hidden="true" id="modalPlayVideo" style="padding-right:0;">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title w-100"><i class="fa fa-video"></i></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">
                        &times;
                    </span>
                </button>
            </div>

            <div class="modal-body">
                <div style="width: 100%;height: auto;margin: 0 auto;max-width:100%;max-height:100%">
                    <video id="my-player" playsinline controls>
                        <source src="" type="video/mp4" />
                    </video>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-outline-info btn-sm text-right" data-dismiss="modal">
                    <i class="fa fa-remove"></i> @ManagerResource.LB_CLOSE
                </button>
            </div>
        </div>
    </div>
</div>
